@{
    ViewData["Title"] = "Dashboard";
}
<h2>Dashboard</h2>
<div class="row g-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary h-100">
            <div class="card-body">
                <h5 class="card-title">Pages</h5>
                <p class="card-text display-5">@ViewData["PageCount"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success h-100">
            <div class="card-body">
                <h5 class="card-title">Posts</h5>
                <p class="card-text display-5">@ViewData["PostCount"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning h-100">
            <div class="card-body">
                <h5 class="card-title">Scheduled</h5>
                <p class="card-text display-5">@ViewData["ScheduledCount"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info h-100">
            <div class="card-body">
                <h5 class="card-title">Analytics Records</h5>
                <p class="card-text display-5">@ViewData["AnalyticsCount"]</p>
            </div>
        </div>
    </div>
</div>