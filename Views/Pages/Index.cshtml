@model IEnumerable<FacebookManager.Models.Page>
@{
    ViewData["Title"] = "Pages";
}
<h2>Pages</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Page</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Posts</th>
            <th>Scheduled</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Posts.Count</td>
            <td>@item.ScheduledPosts.Count</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>