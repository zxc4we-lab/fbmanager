@model FacebookManager.Models.ScheduledPost
@{
    ViewData["Title"] = "Delete Scheduled Post";
}
<h2>Delete Scheduled Post</h2>
<h3>Are you sure you want to delete this scheduled post?</h3>
<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Page</dt>
    <dd class="col-sm-10">@Model.Page?.Name</dd>
    <dt class="col-sm-2">Scheduled For</dt>
    <dd class="col-sm-10">@Model.ScheduledFor.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>