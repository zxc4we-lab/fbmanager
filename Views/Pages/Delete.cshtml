@model FacebookManager.Models.Page
@{
    ViewData["Title"] = "Delete Page";
}
<h2>Delete Page</h2>
<h3>Are you sure you want to delete this page?</h3>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Posts</dt>
    <dd class="col-sm-10">@Model.Posts.Count</dd>
    <dt class="col-sm-2">Scheduled</dt>
    <dd class="col-sm-10">@Model.ScheduledPosts.Count</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>